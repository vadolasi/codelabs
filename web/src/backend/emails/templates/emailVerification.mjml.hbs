<mjml>
  <mj-head>
    <mj-title>Verificar e-mail</mj-title>
    <mj-attributes>
      <mj-text font-family="Helvetica, Arial, sans-serif" />
    </mj-attributes>
  </mj-head>
  <mj-body>
    <mj-section>
      <mj-column>
        <mj-image src="https://{{config.DOMAIN}}/favicon-96x96.png" alt="Logo" width="100px" />
      </mj-column>
      <mj-column>
        <mj-text font-size="24px" color="#000000" font-family="Helvetica, Arial, sans-serif">
          Codelabs
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-section>
      <mj-column>
        <mj-text font-size="20px" color="#000000" font-family="Helvetica, Arial, sans-serif">
          Verifique seu endereço de e-mail
        </mj-text>
        <mj-text font-size="16px" color="#000000" font-family="Helvetica, Arial, sans-serif">
          Utilize o código abaixo para verificar seu endereço de e-mail:
        </mj-text>
        <mj-text container-background-color="#007bff" color="#ffffff">
          {{code}}
        </mj-text>
        <mj-text font-size="16px" color="#000000" font-family="Helvetica, Arial, sans-serif">
          Se você não solicitou essa verificação, ignore este e-mail.
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
