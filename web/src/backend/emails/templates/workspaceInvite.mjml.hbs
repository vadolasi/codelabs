<mjml>
  <mj-head>
    <mj-title>Convite</mj-title>
    <mj-attributes>
      <mj-text font-family="Helvetica, Arial, sans-serif" />
    </mj-attributes>
  </mj-head>
  <mj-body>
    <mj-section>
      <mj-column>
        <mj-image src="https://{{config.DOMAIN}}/favicon-96x96.png" alt="Logo" width="100px" />
      </mj-column>
      <mj-column>
        <mj-text font-size="24px" color="#000000" font-family="Helvetica, Arial, sans-serif">
          Codelabs
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-section>
      <mj-column>
        <mj-text font-size="20px" color="#000000" font-family="Helvetica, Arial, sans-serif">
          Convite para workspace
        </mj-text>
        <mj-text font-size="16px" color="#000000" font-family="Helvetica, Arial, sans-serif">
          Utilize o código abaixo para aceitar o convite:
        </mj-text>
        <mj-text background-color="#007BFF" color="#ffffff">
          {{code}}
        </mj-text>
        <mj-text font-size="16px" color="#000000" font-family="Helvetica, Arial, sans-serif">
          Se você não esperava este convite, ignore este e-mail.
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
