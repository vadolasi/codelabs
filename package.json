{
	"name": "codelabs",
	"private": true,
	"packageManager": "bun@1.2.14",
	"scripts": {
		"dev": "turbo run dev",
		"format-and-lint": "biome check .",
		"format-and-lint:fix": "biome check . --write",
		"database:generate": "drizzle-kit generate --config backend/drizzle.config.ts",
		"database:migrate": "drizzle-kit push --config backend/drizzle.config.ts",
		"database:studio": "drizzle-kit studio --config backend/drizzle.config.ts",
		"postinstall": "if [ \"$CI\" != \"true\" ]; then lefthook install; fi"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/bun": "^1.2.18",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"express": "^5.1.0",
		"http-proxy-middleware": "^3.0.5",
		"lefthook": "^1.12.2",
		"turbo": "^2.5.5",
		"typescript": "^5.8.3"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"workspaces": ["frontend", "backend"],
	"trustedDependencies": [
		"@biomejs/biome",
		"@swc/core",
		"@tailwindcss/oxide",
		"esbuild",
		"frontend",
		"lefthook",
		"msgpackr-extract",
		"sharp"
	],
	"dependencies": {
		"@codemirror/lang-cpp": "^6.0.3",
		"@codemirror/lang-markdown": "^6.3.3",
		"@codemirror/lang-python": "^6.2.1",
		"@codemirror/lang-sass": "^6.0.2",
		"@codemirror/lang-wast": "^6.0.2",
		"@electric-sql/pglite": "^0.3.5"
	}
}
