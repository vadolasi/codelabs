{
	"name": "codelabs",
	"private": true,
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"packageManager": "pnpm@10.28.0",
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"rustfs:bucket": "node scripts/create-rustfs-bucket.mjs",
		"format-and-lint": "biome check .",
		"format-and-lint:fix": "biome check . --write",
		"postinstall": "if [ \"$CI\" != \"true\" ]; then lefthook install; fi"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"lefthook": "^1.13.6",
		"turbo": "^2.8.3",
		"typescript": "^5.9.3"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"@swc/core",
		"@tailwindcss/oxide",
		"bun",
		"esbuild",
		"frontend",
		"lefthook",
		"msgpackr-extract",
		"sharp",
		"web"
	],
	"workspaces": ["web", "realtime", "socketio-msgpack-parser"]
}
